{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true
  },
  "NOTfilesGlob": [
    "**/*.ts",
    "!node_modules/**/*"
  ],
  "NOTexclude": [
    "node_modules",
    "typings/browser.d.ts",
    "typings/browser",
    "typings/main",
    "typings/main.d.ts"
  ],
  "compileOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  }
}
